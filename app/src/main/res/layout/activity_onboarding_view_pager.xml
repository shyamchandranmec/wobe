<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical"
    android:weightSum="2">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/dotsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/ten_10dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="@dimen/zero_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/twenty_20dp"
            android:layout_marginStart="@dimen/twenty_20dp"
            android:layout_weight="1"
            android:background="@drawable/button_accent_selector"
            android:text="@string/login"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_16sp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="@dimen/zero_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/twenty_20dp"
            android:layout_marginLeft="@dimen/five_5dp"
            android:layout_marginRight="@dimen/twenty_20dp"
            android:layout_marginStart="@dimen/five_5dp"
            android:layout_weight="1"
            android:background="@drawable/button_accent_selector"
            android:text="@string/register"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>

</LinearLayout>